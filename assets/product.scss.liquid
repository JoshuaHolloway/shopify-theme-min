.flex-container {
    display: flex;
}
.product, .side-cart {
    flex: 1;
}
img {
    max-width: 100%;
}
.product {
    padding-right: 20px;
}
.side-cart {
    border-left: 1px solid grey;
    padding-left: 20px;
}
.cart__header .close_btn, .cart__header .title {
    color: #fff;
    font-family: Brandon Grotesque,sans-serif;
    font-weight: 900;
}
.cart__header .title {
    font-size: 1rem;
    text-transform: uppercase;
    width: 100%;
}
.cart__header .close_btn {
    cursor: pointer;
    font-size: 2rem;
    padding: 10px;
    margin: -10px;
}
.row {
    margin-left: 15px;
    margin-right: 15px;
}
.cart-container {
    overflow-y: scroll;
    min-height: 100vh;
    height: 100%;
    padding: 0 15px 15vh;
    margin-top: 10px;
}
.flex-middle {
    align-items: center;
}
.flex {
    -js-display: flex;
    display: flex;
}
.cart__row {
    border-bottom: 1px solid #e9e9e9;
    padding: 15px 0;
}
.cart__footer-extra {
    background: #f9f9f9;
    border-bottom: 1px solid #e9e9e9;
    padding: 15px 0;
}
.cart__footer-extra .x-p {
    margin: 5px 0;
    line-height: 15px;
}
.cart__footer-total .x-p {
    font-size: .9rem;
    line-height: .5;
}
.cart__footer-total {
    margin-top: 12px;
}
.cart__qty input {
    padding: 5px 10px;
    max-width: 40px;
    border-radius: 0;
    text-align: center;
    border: 1px solid #d0d0d0;
    border-right: none;
    border-left: none;
}
.cart__qty .x-button {
    padding: 5px;
    background: #f3f3f3;
    border: 1px solid #d0d0d0;
}
.cart__product-meta, .cart__product-name {
    display: block;
}
.cart__product-name {
    font-weight: 900;
    text-decoration: none;
    color: #265674;
}
.cart__product-meta {
    font-size: 15px;
    padding-top: 0;
}
.variant-price {
    font-size: 16px;
    font-weight: 100;
    float: right;
    margin-top: -25px;
}
.cart__cta {
    text-align: center;
}

.btn--secondary.btn-cta, .btn.btn--secondary {
    background: #2c7d90;
}
.btn--secondary.btn-cta:hover, .btn.btn--secondary:hover {
    background: #205b69;
    color: white;
}
.btn--full {
    /*width: 100%;*/
    margin-left: 15px;
}
.btn {
    text-transform: uppercase;
    font-family: Brandon Grotesque, sans-serif;
    letter-spacing: .05rem;
    padding: 11px 30px 10px;
    border: none;
    color: #fff;
    background: #858385;
    font-weight: 900;
    display: table;
    text-decoration: none;
    cursor: pointer;
    border-radius: .2rem;
    transition: all .3s ease;
}
@media only screen and (min-width: 770px) {
    .cart__header {
        height: 60px;
    }
}
@media screen and (max-width: 450px) {
    .row.cart__row img {
        max-width: 100px;
    }
}